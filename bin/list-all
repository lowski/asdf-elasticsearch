#!/usr/bin/env bash
cmd="curl -s"
if [ -n "$GITHUB_API_TOKEN" ]; then
 cmd="$cmd -H 'Authorization: token $GITHUB_API_TOKEN'"
fi
releases_path=https://api.github.com/repos/elastic/elasticsearch/tags?per_page=100
total_pages=$($cmd -I $releases_path | awk -F'[=>]' '/Link:/ {print $(NF-2)}')
current_page=1
versions=''
while [ $current_page -le $total_pages ]
do
  versions+=$($cmd "$releases_path&page=$current_page" | awk -F':' '/\"name\"\:/ {gsub(/\"v|\"|\,/,"",$2);print $2}')
  current_page=$(( $current_page + 1 ))
done
echo $versions | sort
